# OpenAI
# Required for the app to function.
OPENAI_API_KEY=

# Server
# Optional. Defaults to 4000 in src/server.ts.
PORT=4000

# S3 Mirroring (optional)
# If VECTOR_STORE_S3_BUCKET is set, the server will mirror vector store operations to S3.
VECTOR_STORE_S3_BUCKET=
VECTOR_STORE_S3_REGION=us-east-1
VECTOR_STORE_S3_PREFIX=vector-stores/

# Optional. If set, the server will assume this role via STS before calling S3.
# This is useful when the app is running with an AWS identity that can assume the role.
VECTOR_STORE_S3_ROLE_ARN=

# AWS (optional)
# If you do not set VECTOR_STORE_S3_REGION, the server will fall back to AWS_REGION / AWS_DEFAULT_REGION.
AWS_REGION=
AWS_DEFAULT_REGION=


